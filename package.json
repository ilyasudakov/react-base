{
  "name": "basic_react_boilerplate",
  "version": "1.0.0",
  "description": "React + Webpack 5 + SCSS + Jest/RTL",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/ilyasudakov/basic-react-boilerplate.git"
  },
  "scripts": {
    "start": "webpack serve",
    "build": "webpack --mode production",
    "dev": "webpack serve --mode development",
    "watch": "webpack --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "presetup": "npm i shelljs compare-versions",
    "setup": "node ./bin/setup.js",
    "lint": "eslint --ext .js,.jsx . --fix src/**/*.js",
    "format": "prettier src/**/*.js --write --config ./.prettierrc"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.6.3",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.0.1",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-dom": "^4.0.0",
    "lint-staged": "^10.5.3",
    "mini-css-extract-plugin": "^1.3.5",
    "node-fetch": "^2.6.1",
    "node-sass": "^5.0.0",
    "prettier": "^2.2.1",
    "sass-loader": "^10.1.1",
    "style-loader": "^2.0.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "engines": {
    "npm": ">=5",
    "node": ">=8.15.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format"
    }
  },
  "lint-staged": {
    "*.+(js|jsx)": [
      "eslint --fix",
      "git add"
    ],
    "*.+(json|css|md)": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "axios": "^0.21.1",
    "compare-versions": "^3.6.0",
    "dotenv": "^8.2.0",
    "formik": "^2.2.6",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-helmet": "^6.1.0",
    "react-query": "^3.6.0",
    "shelljs": "^0.8.4"
  }
}
